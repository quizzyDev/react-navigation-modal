{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "~/components/*": ["./src/components/*"],
      "~/constants/*": ["./src/constants/*"],
      "~/hooks/*": ["./src/hooks/*"],
      "~/modals/*": ["./src/modals/*"],
      "~/navigators/*": ["./src/navigators/*"],
      "~/screens/*": ["./src/screens/*"],
      "~/styles/*": ["./src/styles/*"],
      "~/utils/*": ["./src/utils/*"],
    }
  },
}
